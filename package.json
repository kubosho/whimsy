{
    "name": "whimsy",
    "displayName": "Whimsy",
    "description": "Color theme randomly change for VS Code",
    "version": "0.4.0",
    "publisher": "kubosho",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.start"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.start",
                "title": "Whimsy: start"
            },
            {
                "command": "extension.stop",
                "title": "Whimsy: stop"
            },
            {
                "command": "extension.updateInterval",
                "title": "Whimsy: update interval"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Whimsy configuration",
            "properties": {
                "whimsy.themes": {
                    "default": [
                        "Default Dark+",
                        "Monokai",
                        "Monokai Dimmed",
                        "Abyss"
                    ],
                    "description": "Specifies the theme names.",
                    "type": "array"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "tsc && ava"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "ava": "^0.19.1",
        "sinon": "^2.3.2",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "lodash.shuffle": "^4.2.0"
    },
    "ava": {
        "files": [
            "**/*.test.js"
        ],
        "source": [
            "**/*.{js}"
        ],
        "concurrency": 5,
        "failFast": false,
        "failWithoutAssertions": false,
        "tap": false,
        "powerAssert": true
    }
}
